<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="products"
            type="com.example.yuxuan.home.bean.ProductsBean" />

        <variable
            name="click"
            type="com.example.yuxuan.utils.OnClickHandle" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recommend_title"
        android:layout_width="match_parent"
        android:background="#F7F8FA"
        android:layout_height="48dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="为您推荐"
            android:textColor="#000000"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="30dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="易通过 利息低 放款快"
            android:textSize="10sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/recommend"
            android:layout_marginLeft="20dp">

        </TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/last"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#FFFFFF"
    tools:ignore="MissingConstraints"
    app:layout_constraintTop_toBottomOf="@+id/recommend_title">


    <TextView
        android:id="@+id/productTypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:text="@{products.productTypeName}"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="25dp">
    </TextView>

    <TextView
        android:id="@+id/Keyword_One"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_label"
        android:gravity="center"
        android:text="@{products.keyword_One}"
        android:textSize="10sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/Keyword_Two"
        android:layout_marginTop="30dp"
        android:layout_marginRight="6dp">

    </TextView>

    <TextView
        android:id="@+id/Keyword_Two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_label"
        android:gravity="center"
        android:text="@{products.keyword_Two}"
        android:textSize="10sp"
        app:layout_constraintRight_toLeftOf="@+id/Keyword_Three"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="6dp"
        android:layout_marginTop="30dp">
    </TextView>

    <TextView
        android:id="@+id/Keyword_Three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_label"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@{products.keyword_Three}"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="60dp">

    </TextView>

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{products.amount}"
        android:textColor="#4B7BFF"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最高借款金额(元)"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp">

    </TextView>

    <TextView
        android:id="@+id/buttonName"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:background="@mipmap/ic_home_btn"
        android:gravity="center"
        android:text="@{products.buttonName}"
        android:onClick="@{click::onClickbuttonName}"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="28dp"
        android:layout_marginRight="20dp">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@+id/last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        tools:ignore="MissingConstraints">

        <include
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/bottom">
        </include>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

</layout>